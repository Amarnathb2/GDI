@model GDI.Models.HeaderLogoModel;
@if (Model != null)
{
    <div class="grid-x">
        <div class="cell small-12 medium-8 large-8 address text-center medium-text-right">
            <p>
                @Html.Raw(Model.CopyRight?.CopyRightText)
            </p>
        </div>
        <div class="cell small-12 medium-4 large-4 footer-logo text-center medium-text-left">
            <a href="@Model?.CopyRight?.FooterLogoLink" target="blank"><span class="@Model?.CopyRight?.FooterLogoClass" aria-hidden="true"></span></a>
        </div>
    </div>

}