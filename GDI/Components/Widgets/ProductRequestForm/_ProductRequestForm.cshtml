@model GDI.Components.Widgets.ProductRequestForm.ProductRequestFormViewModel
@if (Model != null && Model.IsVisible == true)
{
    <article class="Specialty-powder-form-B">
        <div class="grid-container form-bottom common-form common-content padd40">
            <div class="grid-x align-center mrgTB50 ">
                <div class="text-center cell small-12 medium-10 large-7">
                    <h3>@Html.Raw(Model.Title)</h3>
                    <p>@Html.Raw(Model.Subtitle)</p>
                    <hr>
                </div>
                <form id="frmProductRequest" asp-action="SubmitProductRequestForm" asp-controller="FormSubmit" data-ajax="true" data-ajax-method="POST" data-ajax-failure="OnFailureProductRequestForm" data-ajax-success="OnSuccesProductRequestForm" data-ajax-complete="OnCompleteProductRequestForm">
                    @Html.AntiForgeryToken()
                    <div class="grid-container form-bottom common-form common-content padd40">
                        <div class="grid-x align-center">
                            <div class="grid-x grid-margin-x cell small-12 large-9">
                                <div class="cell small-12 medium-4">
                                    <label>*First Name</label>
                                    <input id="GDI_Web_Form_First_Name_Int__c" maxlength="50" type="text" name="FirstName" class="firstName">
                                    <span class="errorLabel">Please enter your First Name.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*Last Name</label>
                                    <input id="GDI_Web_Form_Last_Name_Int__c" maxlength="100" type="text" name="LastName" class="lastName">
                                    <span class="errorLabel">Please enter your Last Name.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*Title</label>
                                    <input id="JobTitle__c" maxlength="50" type="text" name="JobTitle" class="title">
                                    <span class="errorLabel">Please enter your Title.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*Email</label>
                                    <input id="email" maxlength="80" type="text" name="Email" class="email">
                                    <span class="errorLabel">Please enter your Email.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*Company Name</label>
                                    <input type="text" id="company" maxlength="80" name="Company" class="company">
                                    <span class="errorLabel">Please enter your Company Name.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*Phone</label>
                                    <input type="text" id="phone" maxlength="40" name="Phone" class="phone">
                                    <span class="errorLabel">Please enter your Phone.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*Address</label>
                                    <input type="text" id="Street_Address__c" maxlength="100" name="Address" class="city">
                                    <span class="errorLabel">Please enter your Address.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*City</label>
                                    <input type="text" id="City__c" maxlength="100" name="City" class="city">
                                    <span class="errorLabel">Please enter your City.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*state</label>
                                    <select id="State__c" maxlength="100" name="State" class="state">
                                        <option value="">--State--</option>
                                        @foreach (var item in Model?.Getstates)
                                        {
                                            <option value="@item.Values">@item.Options</option>
                                        }

                                    </select>
                                    <span class="errorLabel">Please select your State.</span>
                                </div>
                                <div class="cell small-12 medium-4">
                                    <label>*Zip Code</label>
                                    <input type="text" id="Postal_Zip_Code__c" maxlength="10" name="ZipCode" class="zip">
                                    <span class="errorLabel">Please enter your Zip Code.</span>
                                </div>

                                <div class="cell small-12">
                                    <label>*PRODUCT REQUEST & COMMENTS</label>
                                    <textarea id="Reason_Comments__c" name="Comments" cols="" rows="3" class="product-request prtextarea"></textarea>
                                    <span class="errorLabel">Please enter product request</span>
                                </div>

                                <!--checkbox-->
                                <div class="cell small-12 text-center mrgTB20">
                                    <span class="checkbox">
                                        <!--sign-->
                                        <input type="checkbox" id="Opt_In_to_News_and_Promotions__c" name="OptIn" value="1">
                                        <label for="Opt_In_to_News_and_Promotions__c">YES, SIGN ME UP FOR NEW PRODUCT NEWS, TRENDS & INNOVATIVE FLAVORS</label>
                                    </span>
                                </div>
                                <!--checkboxcondition--->

                                <div class="cell small-12 text-center mrgTB20">
                                    <input type="submit" name="" class="button skyblueBtn btn-primary submitButton" disbaled="" value="Submit Request">
                                </div>
                                <div class="cell small-12">
                                    <label for="description" hidden="">Description</label><textarea hidden="" rows="3" name="Description" class="description" id="description"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </article>
    <article class="Specialty-thank-you-page">
        <section>
            <div class="grid-container text-center padd40">
                <div class="grid-x align-center mrgTB50 common-content">
                    <div class="cell small-12 medium-9 large-6">
                        <h3>Thank You.</h3>

                        <p>Your product request has been received. A sales representative will contact you shortly.</p>
                        <a class="button skyblueBtn" href="/specialty-powders/">Browse more products</a>
                    </div>
                </div>
            </div>
        </section>
    </article>
    <script>var lolData = { 'site': { 'isProduction': true, 'language': 'en' }, 'page': { 'level1': 'product-request', 'type': 'lol-gdiproductrequest', 'server': 'gdi-prod' }, 'visitor': { 'state': 'unauthenticated' } }</script>
}