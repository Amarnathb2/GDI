@using GDI.Helpers;

<environment exclude="Development">
    @{
        var fileMappings = new Dictionary<string, string>
    {
    { "~/GDI/css/lol-foundation.min.css", "wwwroot/GDI/css/lol-foundation.min.css" },
    { "~/GDI/css/lol-main.min.css", "wwwroot/GDI/css/lol-main.min.css" },
    { "~/GDI/css/lol-gdi-aos.min.css", "wwwroot/GDI/css/lol-gdi-aos.min.css" },
    { "~/GDI/css/lol-gdi-ccpa.min.css", "wwwroot/GDI/lol-gdi-ccpa.min.css" },

    };
        var versionedUrls = BundlingAndMinificationVersion.GetVersionedFileUrls(fileMappings);
    }
    <!-- Stylesheet files -->
    @foreach (var fileMapping in fileMappings.Where(fm => fm.Key.EndsWith(".css")))
    {
        <link rel="stylesheet" href="@versionedUrls[fileMapping.Key]" />
    }
</environment>
